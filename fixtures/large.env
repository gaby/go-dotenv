# Application Settings
APP_NAME=MyLargeApp                        # The name of your application
APP_ENV=production                         # The environment the app is running in (development, staging, production)
APP_DEBUG=false                            # Enable or disable debug mode (true/false)
APP_URL=https://www.mylargeapp.com         # The base URL of your application
APP_PORT=8080                              # Port the application listens on
APP_LOG_LEVEL=info                         # Logging level (debug, info, warn, error)
APP_SECRET_KEY=your-very-secret-key        # A secret key used for encrypting sensitive data

# Database Configuration
DB_CONNECTION=mysql                        # The type of database connection (mysql, postgres, sqlite)
DB_HOST=db.mylargeapp.com                  # The database server host
DB_PORT=3306                               # The database server port
DB_DATABASE=mylargeapp_db                  # The name of the database
DB_USERNAME=mylargeapp_user                # The username to connect to the database
DB_PASSWORD=supersecurepassword            # The password to connect to the database

# Redis Configuration
REDIS_HOST=redis.mylargeapp.com            # The Redis server host
REDIS_PORT=6379                            # The Redis server port
REDIS_PASSWORD=anothersecurepassword       # The password for Redis (if required)

# Cache Configuration
CACHE_DRIVER=redis                         # The caching driver to use (redis, file, database)
CACHE_DEFAULT_TTL=600                      # Default cache time-to-live in seconds

# Queue Configuration
QUEUE_CONNECTION=redis                     # Queue connection driver (redis, database, sqs, etc.)
QUEUE_PREFIX=mylargeapp_queue              # Prefix for queue names to avoid collisions
QUEUE_RETRY_AFTER=90                       # Time in seconds before retrying a failed job

# Email Configuration
MAIL_DRIVER=smtp                           # Mail driver to use (smtp, sendmail, mailgun, etc.)
MAIL_HOST=smtp.mailprovider.com            # SMTP server host
MAIL_PORT=587                              # SMTP server port
MAIL_USERNAME=noreply@mylargeapp.com       # SMTP username for sending emails
MAIL_PASSWORD=emailsupersecurepassword     # SMTP password
MAIL_ENCRYPTION=tls                        # Encryption method (tls or ssl)
MAIL_FROM_ADDRESS=noreply@mylargeapp.com   # Default "from" address for outgoing emails
MAIL_FROM_NAME="MyLargeApp Support"        # Default "from" name for outgoing emails

# Third-Party API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key  # API key for Google Maps integration
STRIPE_API_KEY=your-stripe-api-key            # API key for Stripe payment processing
SENDGRID_API_KEY=your-sendgrid-api-key        # API key for SendGrid email service
AWS_ACCESS_KEY_ID=your-aws-access-key         # AWS access key for interacting with AWS services
AWS_SECRET_ACCESS_KEY=your-aws-secret-key     # AWS secret key for interacting with AWS services
AWS_REGION=us-west-2                          # AWS region for your services
TWILIO_ACCOUNT_SID=your-twilio-account-sid    # Twilio Account SID for SMS and voice services
TWILIO_AUTH_TOKEN=your-twilio-auth-token      # Twilio Auth Token for SMS and voice services

# Feature Toggles
FEATURE_USER_REGISTRATION=true             # Enable/disable user registration feature
FEATURE_BETA_MODE=false                    # Enable/disable beta mode for the app
FEATURE_API_THROTTLING=true                # Enable/disable API request throttling

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key         # Secret key for signing JWT tokens
JWT_EXPIRATION=3600                        # JWT token expiration time in seconds
RATE_LIMIT=1000                            # Number of requests allowed per time window
RATE_LIMIT_WINDOW=15m                      # Time window for rate limiting (e.g., 15m, 1h)

# Payment Gateway Settings
PAYMENT_GATEWAY=stripe                     # Payment gateway to use (stripe, paypal, etc.)
PAYMENT_CURRENCY=USD                       # Default currency for payments
PAYMENT_SUCCESS_URL=https://www.mylargeapp.com/payment/success  # URL to redirect to after a successful payment
PAYMENT_FAILURE_URL=https://www.mylargeapp.com/payment/failure  # URL to redirect to after a failed payment

# Social Login Settings
GOOGLE_CLIENT_ID=your-google-client-id     # Google OAuth client ID for social login
GOOGLE_CLIENT_SECRET=your-google-client-secret # Google OAuth client secret
FACEBOOK_APP_ID=your-facebook-app-id       # Facebook App ID for social login
FACEBOOK_APP_SECRET=your-facebook-app-secret # Facebook App secret
GITHUB_CLIENT_ID=your-github-client-id     # GitHub OAuth client ID for social login
GITHUB_CLIENT_SECRET=your-github-client-secret # GitHub OAuth client secret

# Logging and Monitoring
LOG_CHANNEL=stack                          # Log channel to use (stack, single, daily, etc.)
LOG_PATH=/var/log/mylargeapp.log           # Path to the log file
SENTRY_DSN=https://your-sentry-dsn-url     # Sentry DSN for error tracking and monitoring

# Internationalization
DEFAULT_LANGUAGE=en                        # Default language for the application
SUPPORTED_LANGUAGES=en,es,fr,de            # Comma-separated list of supported languages
TIMEZONE=America/Los_Angeles               # Default timezone for the application

# Storage Settings
STORAGE_DRIVER=s3                          # Storage driver to use (local, s3, etc.)
STORAGE_BUCKET_NAME=mylargeapp-bucket      # Name of the S3 bucket
STORAGE_ENDPOINT=s3.us-west-2.amazonaws.com # Custom endpoint for the S3-compatible storage

# Analytics
GOOGLE_ANALYTICS_ID=UA-12345678-9          # Google Analytics tracking ID
SEGMENT_WRITE_KEY=your-segment-write-key   # Segment write key for analytics

# Session Settings
SESSION_DRIVER=cookie                      # Session driver (cookie, database, redis)
SESSION_LIFETIME=120                       # Session lifetime in minutes
SESSION_ENCRYPT=true                       # Encrypt session data (true/false)

# Miscellaneous
MAX_UPLOAD_SIZE=10485760                   # Max upload size in bytes (e.g., 10MB)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,docx  # Comma-separated list of allowed file types for uploads
MAINTENANCE_MODE=false                     # Enable/disable maintenance mode (true/false)
